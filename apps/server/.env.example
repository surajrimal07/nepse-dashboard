# Server configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001
API_KEY=your_api_key_here
JWT_SECRET=at_least_32_characters_long_secret_here

# Convex Configuration
CONVEX_CLOUD_PROD=https://your-convex-prod.convex.cloud
CONVEX_CLOUD_DEV=https://your-convex-dev.convex.cloud
CONVEX_SITE_PROD=https://your-convex-site-prod.convex.site
CONVEX_SITE_DEV=https://your-convex-site-dev.convex.site

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Firebase
FIREBASE_SERVICE_ACCOUNT_KEY='{"type": "service_account", ...}'

# Cloudflare R2 Storage
CLOUDFLARE_ACCESSS_KEY=your_access_key
CLOUDFLARE_ACCESSS_SECRET=your_access_secret
CLOUDFLARE_BUCKET_NAME=your_bucket_name
CLOUDFLARE_HOST=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_LOGO_REGION=auto
CLOUDFLARE_LOGO_BUCKET_NAME=your_logo_bucket_name

# OpenPanel Analytics
OPENPANEL_URL=https://api.openpanel.dev
OPENPANEL_ID=your_prod_id
OPENPANEL_SECRET=your_prod_secret
OPENPANEL_ID_DEV=your_dev_id
OPENPANEL_SECRET_DEV=your_dev_secret

# Telegram Bot
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHANNEL_ID=your_channel_id
TELEGRAM_CHAT_ID=your_chat_id

# Sentry Monitoring
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
